# Revenix Windows Agent environment.
# Copy this file to agent.env and update values.

API_URL=http://YOUR-MAIN-SERVER:8000
REDIS_URL=redis://YOUR-MAIN-SERVER:6379

# Optional
REDIS_PASSWORD=
# Required when API has INTERNAL_SERVICE_TOKEN enabled.
INTERNAL_SERVICE_TOKEN=
# Optional JWT bearer token fallback (only if you don't use internal token).
API_BEARER_TOKEN=
# Leave blank for automatic NIC detection by bootstrap-install.ps1
NETWORK_INTERFACE=
# "true" is recommended for better visibility
PROMISCUOUS_MODE=true

# Firewall sync options ("true" means firewall starts with the agent install).
FIREWALL_SYNC_ENABLED=true
FIREWALL_SYNC_INTERVAL=30
